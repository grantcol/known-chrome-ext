{
  "name": "Trakfire",
  "version": "1.0",
  "manifest_version": 2,

  "description": "Link sharing shortcut",
  "icons": {
    "16": "img/wireicon.png"
  },
  "permissions":  ["activeTab"],
  "background": {
    "persistent": false,
    "scripts": ["js/jquery-1.10.2.js","js/tf-background.js"]
  },
  "page_action": {
    "default_icon": {                    
      "19": "img/check.png"                     
    },
    "default_title": "Trakfire",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },
  "content_scripts": [ {
    "js": [ "js/jquery-1.10.2.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "web_accessible_resources": [ "css/font-awesome.min.css" ]
}