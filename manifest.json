{
  "name": "Wire",
  "version": "1.0",
  "manifest_version": 2,

  "description": "Wire",
  "icons": {
    "16": "img/wireicon.png"
  },
  "omnibox": { "keyword" : "q" },
  "permissions": [ "tabs",  "http://mighty-anchorage-6957.herokuapp.com/**"],
  "background": {
    "persistent": false,
    "scripts": ["jquery-1.10.2.js","background.js"]
  },
    "page_action": {
    "default_icon": {                    
      "19": "img/check.png"                     
    },
    "default_title": "Wire",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },
  "content_scripts": [ {
    "js": [ "jquery-1.10.2.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }],
    "web_accessible_resources": [ "css/font-awesome.min.css" ]

}