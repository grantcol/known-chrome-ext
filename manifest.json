{
  "name": "Trakfire",
  "version": "1.0",
  "manifest_version": 2,

  "description": "Post to trakfire like a wavy god",
  "icons": {
    "16": "img/votes-arrow.png"
  },
  "permissions":  ["activeTab", "tabs"],
  "background": {
    "persistent": false,
    "scripts": ["js/jquery-1.10.2.js"]
  },
  "browser_action": {
    "default_icon": {                    
      "19": "img/votes-arrow.svg"                     
    },
    "default_title": "Trakfire",   
    "default_popup": "popup.html"        
  },
  "content_scripts": [ {
    "js": [ "js/jquery-1.10.2.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "web_accessible_resources": [ "css/font-awesome.min.css", "css/tf-styles.css", "js/bootstrap.min.js", "css/bootstrap.min.css"]
}